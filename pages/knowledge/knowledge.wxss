@import "../../skin/knowledge.wxss";

.content {
  background-color: #fafafa;
  padding-top: 20rpx;
}

.content-item {
  background-color: white;
  border-radius: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  padding: 20rpx 30rpx;
}

.title {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding-bottom: 20rpx;
}

.title text {
  color: #2196f3;
  font-weight: bold;
}

.subname {
  border-color: #2196f3;
  border-radius: 30rpx;
  border-style: solid;
  padding: 5rpx 20rpx;
  margin: 10rpx 10rpx;
  border-width: 2rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #2196f3;
}

.subname text {
  font-size: 34rpx;
  color: white;
}

.children {
  display: flex;
  flex-wrap: wrap;
  justify-content: start;
}

.article-loading {
  background-color: white;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.article-loading image {
  width: 220rpx;
  height: 220rpx;
}
