@import "../../skin/navigation.wxss";

.content {
  display: flex;
  flex-direction: row;
}

.article-loading {
  background-color: white;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

}

.article-loading image {
  width: 220rpx;
  height: 220rpx;
}

.left {
  flex: 2;
  height: 100vh;
  background-color: white;
  padding-top: 20rpx;
}

.right {
  flex: 5;
  background-color: #f9f9f9;
  height: 100vh;
  padding-top: 20rpx;
}

.childen {
  display: flex;
  flex-wrap: wrap;
  justify-content: start;
  align-content: flex-start;
  padding: 16rpx 16rpx;
}

.scroll_left {
  width: 100%;
  height: 100%;
  white-space: nowrap;
}

.scroll_right {
  width: 100%;
  height: 100%;
  white-space: nowrap;
}

.tab {
  padding: 30rpx 20rpx;
}

.tab text {
  color: #666;
  font-size: 32rpx;
  font-weight: 400;
}

.on {
  padding: 30rpx 20rpx;
  border-left: 10rpx solid #2196f3;
  background-color: #f9f9f9;
}

.on text {
  color: #2196f3;
  font-size: 32rpx;
  font-weight: 600;
}

.subname {
  border-color: #eee;
  border-radius: 30rpx;
  border-style: solid;
  padding: 5rpx 16rpx;
  margin: 10rpx 10rpx;
  border-width: 2rpx;
  background-color: #eee;
}

.subname text {
  font-size: 32rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}