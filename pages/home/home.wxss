.page-body {
  background-color: #fafafa;
}

swiper image {
  width: 100%;
  height: 400rpx;
}

swiper {
  width: 100%;
  height: 480rpx;
  background-color: #e0e0e0;
}

.banner text {
  padding-left: 20rpx;
  color: white;
  margin-top: 10rpx;
  float: left;
}

.title_index {
  position: absolute;
  right: 0rpx;
  padding-right: 20rpx;
}

.content-image image {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.content-item {
  width: 95%;
  height: 160rpx;
  background-color: white;
  border-radius: 20rpx;
  margin-left: 0rpx;
  margin-right: 0rpx;
  margin: 20rpx auto;
  padding: 20rpx 0;
}

.content-image {
  float: left;
  display: block;
  width: 96rpx;
  height: 100%;
  position: relative;
}

.content-text {
  margin-left: 106rpx;
  padding-left: 20rpx;
}

.content-bottom {
  margin-top: 20rpx;
}

.content-bottom text {
  color: #cdcdcd;
  font-size: 26rpx;
}

.content-top {
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
}

.content-top-image {
  width: 68rpx;
  height: 68rpx;
}

.content-top text {
  padding-left: 20rpx;
}

.bottom {
  background-color: white;
}

.bottom_loading {
  display: flex;
  flex-direction: row;
  margin: auto auto;
  width: 35%;
  background-color: white;
}

.bottom_loading image {
  width: 96rpx;
  height: 96rpx;
}

.bottom_loading text {
  height: 95%;
  margin: auto 10rpx;
}

.article-loading {
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding-top: 180rpx;
}

.article-loading image {
  width: 160rpx;
  height: 160rpx;
}
