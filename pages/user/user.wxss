@import "../../skin/user.wxss";
.user {
  background-color: #2196f3;
}

.content {
  position: absolute;
  background-color: #fafafa;
  width: 100%;
  height: 100%;
}

.user-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 120rpx;
  padding-bottom: 20rpx;
}

.user-info image {
  width: 192rpx;
  height: 192rpx;
}

.userinfo-avatar {
  width: 192rpx;
  height: 192rpx;
  border-radius: 50%;
}

.user-info text {
  font-size: 1.5em;
  color: white;
  margin-top: 15rpx;
}

.collect {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 40rpx;
  background-color: white;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 16rpx;
}

.collect text {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.about {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  background-color: white;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 16rpx;
}

.about text {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.skin {
  position: absolute;
  right: 0;
  margin-right: 20rpx;
}

.weather{
  position: absolute;
  top: 0;
  left: 0;
  padding:20rpx 20rpx;
}

.weather text{
  color: white;
  font-size: medium;
  font-weight: bold;
}
